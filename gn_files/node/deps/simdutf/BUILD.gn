config("simdutf_config") {
  include_dirs = [ "." ]
}

source_set("simdutf") {
  public_configs = [ ":simdutf_config" ]
  if (is_clang || !is_win) {
    cflags_cc = [
      "-Wno-ambiguous-reversed-operator",
    ]
  }
  sources = [
    "simdutf.cpp",
    "simdutf.h",
  ]
}
